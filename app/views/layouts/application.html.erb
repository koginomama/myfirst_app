<!DOCTYPE html>
<html>
  <head>
    <title>お天気コーデ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%# <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="reset.css"> %>
    <link href="https://fonts.googleapis.com/css2?family=Cherry+Bomb+One&family=M+PLUS+Rounded+1c:wght@500&family=Tsukimi+Rounded&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <div class="header-content">
      <%= link_to 'おてんきこーで', root_path, class:"title" %>
      <ul class="login">
      <% if user_signed_in? %>
        <li><%= link_to "#{current_user.baby_name}さん", "#", class: "login-name"  %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "login-name" %></li>
      <% else %>
        <li><%= link_to 'ログイン', user_session_path, class: "login-name"  %></li>
        <li><%= link_to 'しんきとうろく', new_user_registration_path, class: "login-name"  %></li>
      <% end %>
      </ul>
    </div>
  </header>

  <body>
    <%= yield %>
  </body>

  <footer>
     <p class="copyright">Copyright © POIPOI All rights reserved.</p>
  </footer>
</html>
